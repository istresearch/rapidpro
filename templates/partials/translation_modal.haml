-load i18n

%html
  %body
    .translation.modal{data-dismiss:"modal"}
      .modal-header
        %button{data-dimiss:"modal",type:"button",class:"pull-right close",aria-hidden:"true"}
        %h3
          .icon
          %span{id:"modal-title"}><
            -trans "Translation"
      .modal-body
        .translate-text.translate-from{ng-show:"translation.from"}
          [[translation.from]]
        %h5
          -trans "[[language.name]] Translation"
        %label
          %textarea{ng-model:"translation.to",auto-complete:"",class:"translation"}

          
        .quick-reply{ng-show:"translation.toQuickReply.length"}
          .modal-quick-reply-header
            .modal-quick-reply-value.quick_reply-title
              -trans "Text"
            .modal-quick-reply-value
              -trans "Value"
              
          .modal-quick-reply{ng-repeat:"response in translation.toQuickReply", class:""}
            .modal-quick-reply-value.quick_reply-title.center-translate
              .translate-from{ng-show:"translation.fromQuickReply[$index].title"}
                -trans "[[translation.fromQuickReply[$index].title]]"
              %input{type:"text", name:"quick-reply-title", ng-model:"response.title", ng-required:"true", ng-maxlength:"20", maxlength:"20"}
            .modal-quick-reply-value.center-translate
              .translate-from{ng-show:"translation.fromQuickReply[$index].payload"}
                -trans "[[translation.fromQuickReply[$index].payload]]"
              %input{type:"text", name:"quick-reply-value", ng-model:"response.payload", ng-required:"true"}
              
        .quick-reply{ng-show:"translation.toButtonsReply.length"}
          .modal-quick-reply-header
            .modal-quick-reply-value.quick_reply-title
              -trans "Text"
            .modal-quick-reply-value
              -trans "URL"
              
          .modal-quick-reply{ng-repeat:"response in translation.toButtonsReply", class:""}
            .modal-quick-reply-value.quick_reply-title.center-translate
              .translate-from{ng-show:"translation.fromButtonsReply[$index].title"}  
                -trans "[[translation.fromButtonsReply[$index].title]]"                
              %input{type:"text", name:"quick-reply-title", ng-model:"response.title", ng-required:"true", ng-maxlength:"20", maxlength:"20"}
            .modal-quick-reply-value.center-translate
              .translate-from{ng-show:"translation.fromButtonsReply[$index].url"}
                -trans "[[translation.fromButtonsReply[$index].url]]"           
              %input{type:"text", name:"quick-reply-value", ng-model:"response.url", ng-required:"true", ng-pattern:"/^(http[s]?:\/\/){0,1}(www\.){0,1}[a-zA-Z0-9\.\-]+\.[a-zA-Z]{2,5}[\.]{0,1}/"}
        
      .modal-footer
        %button{ng-click:"cancel()",class:"btn btn-secondary"}
          -trans "Cancel"
        %button{ng-click:"ok(translation)",class:"btn btn-primary"}
          -trans "Ok"