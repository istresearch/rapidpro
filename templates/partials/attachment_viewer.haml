-load i18n

%html
  %body
    .modal{class:'[[type]]', data-dismiss:"modal"}
      .modal-body
        %button{ng-click:"cancel()", data-dimiss:"modal",type:"button",class:"pull-right close", aria-hidden:"true"}
          x
        %a.download-btn.icon.icon-file_download{ng-if:'action._mediaType == "image" && action._translation_media', type:"button", class:"pull-right", target:"_self", download:"", href:"[[action._translation_media]]"}
        %img.attachment-media{ng-if:'action._mediaType == "image" && action._translation_media', id:'[[action.uuid]]_image', ng-src:'[[action._translation_media]]'}
        %video.attachment-media{ng-if:'action._mediaType == "video"', controls:'', id:'[[action.uuid]]_video', ng-src:'[[action._translation_media]]'}
        %audio.attachment-media{ng-if:'action._mediaType == "audio"', controls:'', id:'[[action.uuid]]_audio', ng-src:'[[action._translation_media]]'}
