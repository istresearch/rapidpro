<temba-select placeholder="{{widget.placeholder}}" name="{{ widget.name }}"{% include "django/forms/widgets/attrs.html" %}>

{% for group_name, group_choices, group_index in widget.optgroups %}
  {% if group_name %}<optgroup label="{{ group_name }}">{% endif %}
  {% for option in group_choices %}
    <temba-option name="{{ option.label }}" value="{{ option.value|stringformat:'s' }}" {%if option.selected%}selected{%endif%}></temba-option>
  {% endfor %}

  {% if group_name %}</optgroup>{% endif %}{% endfor %}
</temba-select>

