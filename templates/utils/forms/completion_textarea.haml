<rp-completion 
  {% include "django/forms/widgets/attrs.html" %}  
  
  name="{{widget.name}}"
  value="{% if widget.value %}{{widget.value}}{%endif%}"
  
  completionsEndpoint="/mr/docs/completion.json"
  functionsEndpoint="/mr/docs/functions.json"
  fieldsEndpoint="/{% if widget.attrs.subdir %}{{widget.attrs.subdir}}{%endif%}api/v2/fields.json"
  globalsEndpoint:"/{% if widget.attrs.subdir %}{{widget.attrs.subdir}}{%endif%}api/v2/globals.json"
  textarea>
</rp-completion>