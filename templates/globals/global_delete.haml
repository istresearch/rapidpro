{% extends "smartmin/base.html" %}

{% load smartmin %}
{% load i18n %}

-block page-top

-block content
  -block pjax

    -if object.get_usage_count
      .row
        .span5
          %p
            %b
              {{ object.name }}
          %p
            -trans "cannot be deleted because it is in use. Usage summary:"
          %p
            -trans "Flows:"
            {{ object.get_usage_count }}

    -else
      .row
        .span5
          %p
            -trans "Are you sure you want to delete this global?"
          %p
            %b
              {{ object.label }}
          %p
            -trans "Once deleted, this global will be gone forever. There is no way to undo this operation."

          <form method="POST">
            {% block delete_form %}{% endblock %}
          </form>





