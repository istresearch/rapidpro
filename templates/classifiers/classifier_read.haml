-extends "smartmin/read.html"
-load smartmin i18n


-block fields

-block title
  {{ object.name }}

-block subtitle
  {{ object.get_type.name }}
  -trans "Classifier"

-block content

  %table.list.lined
    %thead
      %tr
        %th
          -trans "Intent"
        %th
          -trans "External ID"
        %th
          -trans "Created On"

    %tbody
      -for intent in object.active_intents
        %tr
          %td.intent-name
            {{ intent.name }}

          %td.intent-id
            {{ intent.external_id }}

          %td.intent-created
            {{ intent.created_on }}

        -empty
          %tr.empty
            %td(colspan=3)
              -trans "No synced intents at this time."
  .text-center.mt-2.text-sm.text-gray-500
    -trans "Intents are synced automatically every 5 minutes"

-block extra-style
  {{ block.super }}

  :css
    td {
      padding: 5px;
    }

    td.intent-id {
      font-family: monospace;
      width: 400px;
    }

    td.intent-created {
      width: 200px;
    }

-block summary
  {{ classifier.get_type.name }}
  -trans "Classifier"
  %b
    {{ classifier.name }}
