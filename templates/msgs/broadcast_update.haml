-extends 'smartmin/form.html'

-load smartmin
-load i18n humanize

-block form-span
  span8
-block fields
  .instructions
    -trans "Write the message that will get sent when the scheduled time arrives"
    %fieldset
      -render_field 'message'
      -render_field 'omnibox'

-block extra-script
  :javascript
    prepareOmnibox();
    $("#id_message").trigger('keyup');

-block extra-style
  :css
    #broadcast_preview {
      font-style:italic;
      font-size:14px;
    }

    #counter {
      display:block;
      padding-top:10px;
      height:20px;
      font-size: 12px;
      float:left;
      width:84%;
      text-align:right;
      margin-top:-10px;
    }

    #id_message {
      width:90%;
      height:100px;
    }


-block summary

  -blocktrans with recipients_display=broadcast.get_recipients_display
    The message will be sent to
    %span.attn
      {{recipients_display}}

    #broadcast_preview
      {{ object.get_default_text }}

