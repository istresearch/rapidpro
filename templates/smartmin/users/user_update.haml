-extends "smartmin/update.html"

-load smartmin i18n temba

- block pre-form
  .pull-right
    %a.btn.btn-alert.deactivate
      -trans "Deactivate"

- block post-form
  .deletion.hide
    .title
      -trans "Deactivate User"

    .body

      -blocktrans with user.username as name
        Are you sure you want to deactivate the user {{name}}?

      - with user.get_owned_orgs as orgs
        -if orgs
          .delete-warning

            .attn
              -trans "Whoa, whoa, whoa!"
            .orgs
              -trans "By deactivating this user,"
              -for org in orgs
                %span.org
                  {{org.name}}{{forloop|oxford}}
              -blocktrans
                will also be deleted. All organization data will be deleted and there is no
                going back. This includes all flows, contacts, messages, etc.

    %a#delete-form.posterize{href:'{% url "orgs.user_deactivate" user.id %}?deactivate=true'}

- block extra-script
  :javascript

    $(document).ready(()=>{
      $('.deactivate').live('click', () => {
        modal = new ConfirmationModal($('.deletion > .title').html(), $('.deletion > .body').html());
        modal.addClass('alert');
        modal.setListeners({onPrimary: function(){
          $('#delete-form').click();
        }}, false);
        modal.setPrimaryButton('{% trans "Delete" %}');
        modal.show();

      });
    });

- block extra-style
  {{block.super}}
  :css

    .attn {
      font-weight: 500;
    }

    .delete-warning {
      margin-top: 10px;
    }

    .form-horizontal .controls {
      margin-left: 160px;
    }

    .controls #id_groups {
      margin-left: 0px;
    }

