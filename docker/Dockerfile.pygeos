# Alpine image with Python 3.9 as default python3 install
FROM node:12.22-alpine3.14

COPY docker/geolibs.sh /

RUN set -ex \
 && apk add --no-cache --virtual .build-deps \
    gcc \
    g++ \
    cmake \
    libc-dev \
    musl-dev \
    linux-headers \
 && sh /geolibs.sh \
 && apk del .build-deps \
 && rm /geolibs.sh
