# Require an image that easily supports Python 3.6
FROM node:10.23-alpine3.9

COPY docker/geolibs.sh /

RUN set -ex \
 && apk add --no-cache --virtual .build-deps \
    gcc \
    g++ \
    make \
    libc-dev \
    musl-dev \
    linux-headers \
 && sh /geolibs.sh \
 && apk del .build-deps \
 && rm /geolibs.sh
