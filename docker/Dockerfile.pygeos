FROM python:3.6-alpine as load-files

COPY docker/geolibs.sh /opt/

# ========================================================================

FROM python:3.6-alpine

COPY --from=load-files /opt /

RUN set -ex \
 && apk add --no-cache --virtual .build-deps \
	  gcc \
	  g++ \
	  make \
	  libc-dev \
	  musl-dev \
	  linux-headers \
 && sh /geolibs.sh \
 && apk del .build-deps
 && rm /geolibs.sh

CMD ["python3"]
