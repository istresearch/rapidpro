-extends "smartmin/read.html"

-load smartmin sms temba i18n humanize pm

-block extra-style
  {{block.super}}
  :css
    temba-button {
      display: block;
    }
    li {
      list-style-type: disc;
    }
    .data-field {
      display: flex;
      margin-bottom: 1rem;
    }
    .data-label {
      font-weight: bolder;
      width: 10em;
      text-align: end;
      margin-right: 3em;
    }
    .data-value {
      font-weight: none;
    }
    .button-success {
      background: lightgreen;
    }
    .data-value-uuid {
      font-variant: all-small-caps;
      font-size: large;
    }
    .chat_modes {
      font-size: 1.4rem;
      .chat_mode {
        margin-right: 0.3em;
      }
      a:link {
        text-decoration: none;
      }
      /*glyph icons in bootstrap2 size themselves at font-size 16px*/
      .icon-phone:before {
        font-size: 1.4rem;
      }
    }



-block page-title
  {{ page_title }}

-block title-icon
  %span.title-icon
    .glyph.icon-inbox

-block title
  {{ object.name }}

-block content
  %hr
  %br
  %div.object
    .data-field
      .data-label
        Address/Device ID:
      .data-value
        {{ object.address }}
    .data-field
      .data-label
        UUID:
      .data-value.data-value-uuid
        {{ object.uuid }}
    .data-field
      .data-label
        ID:
      .data-value
        {{ object.id }}
    .data-field
      .data-label
        Apps:
      .data-value
        .chat_modes
          {% with obj=object %}
            {% for child_obj in obj.children %}
              <a href="/channels/channel/read/{{ child_obj.uuid }}" data-chat_mode="{{ child_obj.chat_mode }}">
                <div class="chat_mode {{ child_obj|chat_mode_class }}" title="{{ child_obj.name }}"></div>
              </a>
            {% endfor %}
          {% endwith %}
    %hr
    .data-field
      .data-label
        Last Seen:
      .data-value
        {{ object.last_seen }}
    .data-field
      .data-label
        Created:
      .data-value
        {{ object.created_on }}
    .data-field
      .data-label
        Modified:
      .data-value
        {{ object.modified_on }}
    .data-field
      .data-label
        Country:
      .data-value
        {{ object.country }}
    .data-field
      .data-label
        Device:
      .data-value
        {{ object.device }}
    .data-field
      .data-label
        OS:
      .data-value
        {{ object.os }}
    .data-field
      .data-label
        Alert Email:
      .data-value
        {{ object.alert_email }}
    .data-field
      .data-label
        Roles:
      .data-value
        {{ object.role }}
    .data-field
      .data-label
        bod:
      .data-value
        {{ object.bod }}
    .data-field
      .data-label
        Tx Per Second:
      .data-value
        {{ object.tps }}
    .data-field
      .data-label
        config:
      .data-value
        {{ object.config }}

-block extra-script
  {{ block.super }}
