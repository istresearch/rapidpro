-extends "smartmin/form.html"

-load compress temba

-block title-icon
  .title-icon
    %span.glyph.icon-tembatoo-bandwidth

-block title-text
  .title-text
    %h1 Connect Bandwidth

-block pre-form
  .connect-help
    %p
      To connect your Bandwidth Account you will need to provide us your Bandwidth account SID and auth token.

    %p
      Both values can be found on your <a target="bandwidth" href="https://dashboard.bandwidth.com">Bandwidth Dashboard page</a>.

-block extra-script
  {{block.super}}
  :javascript
    $(document).ready(function() {
      $("form.smartmin-form").attr('autocomplete', 'off');
    });

-block extra-less
  -compress css inline
    {% lessblock %}
      :plain
        .connect-help {
          margin-bottom: 25px;
          width: 600;
        }

        a:hover {
          text-decoration: none;
        }

    {% endlessblock %}
